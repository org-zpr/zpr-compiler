# -*- mode: toml -*-

[resolver]
order = ["hosts", "dns"]

[resolver.hosts]
"n0.zpr" = "fd5a:5052::2"
"n0.overlay" = "10.0.0.1"

[nodes."node"]
provider = [ [ "endpoint.zpr.adapter.cn", "node" ] ]
zpr_address = "n0.zpr"

[trusted_services.default]
cert_path = "ca-cert.pem"

[protocols.ping]
l4protocol = "ICMP4"
icmp_type = "request-response"
icmp_codes = [ 0, 8 ]

[services.A1Svc]
protocol = "ping"

[services.A2Svc]
protocol = "ping"

[services.PingableVs]
protocol = "ping"

[services.PingableNode]
protocol = "ping"
