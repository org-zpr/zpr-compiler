# -*- mode: toml -*-


[resolver]
order = ["hosts", "dns"]

[resolver.hosts]
"n0.zpr" = "fd5a:5052:90de::1" # zpr contact addr
"n0.overlay" = "192.168.0.55" 
"my.service" = "fd5a:5052:1::8080" # ZPR contact addr

[nodes."node.zpr.org"]
provider = [ ["endpoint.zpr.adapter.cn", "node.zpr.org"] ]
zpr_address = "n0.zpr"

[trusted_services.default]
cert_path = "ca-cert.pem"

[protocols.http]
l4protocol = "TCP"
port = 80

[protocols.perf]
l4protocol = "TCP"
port = 5056

[protocols.ping]
l4protocol = "ICMP6"
icmp_type = "request-response"
icmp_codes = [ 128, 129 ]

[services.WebService]
protocol = "http"


[services.IPerfService]
protocol = "perf"

[services.PingableService]
protocol = "ping"

[services.PingableNode]
protocol = "ping"


